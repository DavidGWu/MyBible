<?xml version="1.0" encoding="utf-8"?>
   <GridView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridviewBible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:clipToPadding="false"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:columnWidth="20dp"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:minHeight="20dp" android:background="#ff93cccb"
        android:clickable="true" android:choiceMode="singleChoice" android:minWidth="30dp"
        android:drawSelectorOnTop="true" android:paddingLeft="5dp" android:paddingRight="5dp"
        android:paddingBottom="5dp" android:scrollingCache="true">
    </GridView>
